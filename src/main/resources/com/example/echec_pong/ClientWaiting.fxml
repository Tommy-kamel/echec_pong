<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.control.Button?>
<VBox alignment="CENTER" spacing="20.0" xmlns:fx="http://javafx.com/fxml" prefWidth="400">
    <padding>
        <Insets bottom="20.0" left="20.0" right="20.0" top="20.0"/>
    </padding>

    <Label text="Connexion au serveur" style="-fx-font-size: 18px; -fx-font-weight: bold;"/>
    
    <VBox spacing="10.0">
        <Label text="Adresse IP du serveur :"/>
        <HBox spacing="10.0" alignment="CENTER_LEFT">
            <TextField fx:id="serverIpField" promptText="localhost ou 192.168.x.x" prefWidth="250" text="localhost"/>
            <Label text=":12345" style="-fx-text-fill: gray;"/>
        </HBox>
    </VBox>
    
    <Button fx:id="connectButton" text="Se connecter" style="-fx-font-size: 14px; -fx-padding: 10 30;"/>
    
    <Label fx:id="statusLabel" text="" style="-fx-text-fill: gray;"/>
</VBox>