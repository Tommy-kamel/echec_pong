<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.StackPane?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.Button?>
<VBox alignment="CENTER" spacing="20.0" xmlns:fx="http://javafx.com/fxml" prefWidth="800" prefHeight="700">
    <padding>
        <Insets bottom="20.0" left="20.0" right="20.0" top="20.0"/>
    </padding>

    <HBox alignment="CENTER" spacing="20.0">
        <Label fx:id="gameStatusLabel" text="Jeu en cours" style="-fx-font-size: 18px; -fx-font-weight: bold;"/>
        <Button fx:id="replayButton" text="Rejouer" visible="false" style="-fx-font-size: 16px; -fx-padding: 10 20; -fx-background-color: #4CAF50; -fx-text-fill: white; -fx-font-weight: bold; -fx-cursor: hand;"/>
    </HBox>
    <StackPane fx:id="gameArea" prefWidth="1000" prefHeight="1000"/>
</VBox>