<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.layout.HBox?>
<VBox alignment="CENTER" spacing="10.0" xmlns:fx="http://javafx.com/fxml">
    <padding>
        <Insets bottom="20.0" left="20.0" right="20.0" top="20.0"/>
    </padding>

    <Label text="Paramètres du jeu (Hôte)"/>
    <HBox spacing="10.0" alignment="CENTER">
        <Label text="Largeur:"/>
        <TextField fx:id="widthField" text="8" prefWidth="50"/>
        <Label text="Hauteur:"/>
        <TextField fx:id="heightField" text="8" prefWidth="50"/>
    </HBox>
    <HBox spacing="10.0" alignment="CENTER">
        <Label text="PV Pion:"/>
        <TextField fx:id="pionHealth" text="3" prefWidth="50"/>
        <Label text="PV Cavalier:"/>
        <TextField fx:id="cavalierHealth" text="5" prefWidth="50"/>
    </HBox>
    <HBox spacing="10.0" alignment="CENTER">
        <Label text="PV Fou:"/>
        <TextField fx:id="fouHealth" text="5" prefWidth="50"/>
        <Label text="PV Tour:"/>
        <TextField fx:id="tourHealth" text="5" prefWidth="50"/>
    </HBox>
    <HBox spacing="10.0" alignment="CENTER">
        <Label text="PV Dame:"/>
        <TextField fx:id="dameHealth" text="8" prefWidth="50"/>
        <Label text="PV Roi:"/>
        <TextField fx:id="roiHealth" text="10" prefWidth="50"/>
    </HBox>
    <HBox spacing="10.0" alignment="CENTER">
        <Label text="Premier service:"/>
        <ComboBox fx:id="firstServeCombo" prefWidth="100"/>
    </HBox>
    <Label fx:id="statusLabel" text="En attente de client..."/>
    <Button text="Démarrer" fx:id="startButton"/>
</VBox>